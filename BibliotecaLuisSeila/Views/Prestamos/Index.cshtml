@model IEnumerable<BibliotecaLuisSeila.Models.Prestamos>
@{
    ViewData["Title"] = "Préstamos";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-handshake"></i> Préstamos</h1>
    <a class="btn btn-success" asp-action="Create">
        <i class="fas fa-plus"></i> Nuevo Préstamo
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Estudiante</th>
                <th>Libro</th>
                <th>Fecha Préstamo</th>
                <th>Fecha Vencimiento</th>
                <th>Fecha Devolución</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Estudiante.Nombre @item.Estudiante.Apellido</td>
                    <td>@item.Libro.Titulo</td>
                    <td>@item.FechaPrestamo.ToString("dd/MM/yyyy")</td>
                    <td>@item.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.FechaDevolucion.HasValue)
                        {
                            @item.FechaDevolucion.Value.ToString("dd/MM/yyyy")
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        @if (item.EstaDevuelto)
                        {
                            <span class="badge bg-success">Devuelto</span>
                        }
                        else if (item.FechaVencimiento < DateTime.Now)
                        {
                            <span class="badge bg-danger">Vencido</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Pendiente</span>
                        }
                    </td>
                    <td>
                        @if (!item.EstaDevuelto)
                        {
                            <form asp-action="Devolver" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success"
                                        onclick="return confirm('¿Está seguro de marcar este libro como devuelto?')">
                                    <i class="fas fa-check"></i> Devolver
                                </button>
                            </form>
                        }
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i> No hay préstamos registrados.
    </div>
}