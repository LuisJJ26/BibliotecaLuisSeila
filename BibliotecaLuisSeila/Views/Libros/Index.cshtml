@model IEnumerable<BibliotecaLuisSeila.Models.Libros>
@{
    ViewData["Title"] = "Libros";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-book"></i> Libros</h1>
    <a class="btn btn-success" asp-action="Create">
        <i class="fas fa-plus"></i> Nuevo Libro
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Título</th>
                <th>Autor</th>
                <th>Editorial</th>
                <th>Categoría</th>
                <th>ISBN</th>
                <th>Disponibles</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Autor)</td>
                    <td>@Html.DisplayFor(modelItem => item.Editorial)</td>
                    <td>@Html.DisplayFor(modelItem => item.Categoria)</td>
                    <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                    <td>
                        <span class="badge @(item.Inventario?.CantidadDisponible > 0 ? "bg-success" : "bg-danger")">
                            @(item.Inventario?.CantidadDisponible ?? 0) disponibles
                        </span>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>