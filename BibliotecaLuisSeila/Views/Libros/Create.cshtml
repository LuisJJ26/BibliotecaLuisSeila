@model BibliotecaLuisSeila.Dto.LibroDto
@{
    ViewData["Title"] = "Registrar Libro";
}

<h1><i class="fas fa-book-medical"></i> Registrar Nuevo Libro</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Autor" class="control-label"></label>
                        <input asp-for="Autor" class="form-control" />
                        <span asp-validation-for="Autor" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Editorial" class="control-label"></label>
                        <input asp-for="Editorial" class="form-control" />
                        <span asp-validation-for="Editorial" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Categoria" class="control-label"></label>
                        <input asp-for="Categoria" class="form-control" />
                        <span asp-validation-for="Categoria" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="AñoPublicacion" class="control-label"></label>
                        <input asp-for="AñoPublicacion" type="number" class="form-control" />
                        <span asp-validation-for="AñoPublicacion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CantidadTotal" class="control-label"></label>
                <input asp-for="CantidadTotal" type="number" class="form-control" min="1" />
                <span asp-validation-for="CantidadTotal" class="text-danger"></span>
                <small class="form-text text-muted">Esta cantidad determinará los libros disponibles para préstamo.</small>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Registrar Libro
                </button>
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="fas fa-arrow-left"></i> Volver a Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}